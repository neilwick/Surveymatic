@using Data
@using Model
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<SurveymaticContext> DbFactory

<div>

  <div class="row">
    <div class="column" style="background-color:lavenderblush;">English: @en.Text</div>
    <div class="column" style="background-color:lavender;">French: @fr.Text</div>
  </div>


</div>

@code {



    [Parameter]
    public Surveymatic.Model.Question question { get; set; }

    private QuestionTranslation en { get; set; } = new();
    private QuestionTranslation fr { get; set; } = new();


    protected override void OnInitialized()
    {

        foreach (var t in question.QuestionTranslations)
        {
            if (t.Language == "en") { en = t; }
            else if (t.Language == "fr") { fr = t; }
        }


    }
}