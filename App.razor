<CascadingAuthenticationState>
  <Router AppAssembly="@typeof(Program).Assembly">
      <Found Context="routeData">
          <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
              <Authorizing>
                  <p>Please wait...</p>
              </Authorizing>
              <NotAuthorized>
                  <h1>Sorry</h1>
                  <p>You're not authorized to access survey, please log in.</p>
              </NotAuthorized>
          </AuthorizeRouteView>
      </Found>
      <NotFound>        
          <p>Not found.</p>        
      </NotFound>
  </Router>
</CascadingAuthenticationState>