@page "/helpTest"

<h1>Help</h1>

<p>This is a sample of Help component.</p>

<p>Help: @currentCount</p>
<Help HelpTag="Login" />
<button class="btn btn-primary" @onclick="IncrementCount">Help Button</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 3;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}